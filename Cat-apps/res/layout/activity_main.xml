<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >



    <ImageButton
        android:id="@+id/imageButtonCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewMeow"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:background="@drawable/ic_cat"
        android:contentDescription="@string/textViewMeow"
        android:onClick="onCatButtonClick"
        android:scaleType="center"
        android:src="@drawable/ic_cat" />




    <TextView
        android:id="@+id/textViewMeow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8pt"
        android:text="@string/textViewMeow"
        android:textColor="#f4a2cd"
        android:textColorHint="@android:color/primary_text_light"
        android:textSize="@dimen/size_meow"
        android:visibility="invisible"
        tools:context=".MainActivity" />


    <ImageView
        android:id="@+id/imageViewHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="12pt"
        android:layout_marginLeft="12pt"
        android:contentDescription="@null"
        android:src="@drawable/ic_heart" />























    <ProgressBar
        android:id="@+id/progressBarHearts"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageViewHeart"
        android:layout_marginBottom="1pt"
        android:layout_marginLeft="8pt"
        android:layout_marginRight="8pt"
        android:layout_toLeftOf="@+id/textViewHeartsPercentage"
        android:layout_toRightOf="@+id/imageViewHeart"
        android:max="100" />

    <TextView
        android:id="@+id/textViewHeartsPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewHeart"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12pt"
        android:gravity="right"
        android:minWidth="22pt"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageViewSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4pt"
        android:layout_marginTop="4pt"
        android:contentDescription="@null" />






















    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewSex"
        android:layout_marginLeft="4pt"
        android:layout_toRightOf="@+id/imageViewSex"
        android:text="@string/catName"
        android:textColor="#ffffff"
        android:textSize="7pt"
        android:typeface="normal" />

</RelativeLayout>
