<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/imageButtonCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewMeow"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:background="@drawable/ic_cat"
        android:contentDescription="@string/textViewMeow"
        android:onClick="onCatButtonClick"
        android:scaleType="center"
        android:src="@drawable/ic_cat" />

    <TextView
        android:id="@+id/textViewMeow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="18dp"
        android:text="@string/textViewMeow"
        android:textColor="#f4a2cd"
        android:textColorHint="@android:color/primary_text_light"
        android:textSize="@dimen/size_meow"
        android:visibility="invisible"
        tools:context=".MainActivity" />

    <ImageView
        android:id="@+id/imageViewSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/size_margin_left"
        android:layout_marginTop="@dimen/size_margin_top"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewSex"
        android:layout_marginLeft="@dimen/size_sex_text_spacing"
        android:layout_toRightOf="@+id/imageViewSex"
        android:text="@string/catName"
        android:textColor="#ffffff"
        android:textSize="@dimen/size_sex_text"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textViewMoodStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_margin_bottom"
        android:layout_marginRight="@dimen/size_margin_right"
        android:layout_toRightOf="@id/progressBarMood"
        android:gravity="right"
        android:minWidth="@dimen/size_meter_text_minwidth"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/size_meter_text"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBarMood"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_margin_bottom"
        android:layout_marginLeft="@dimen/size_meter_bar_horiz_spacing"
        android:layout_marginRight="@dimen/size_meter_bar_horiz_spacing"
        android:layout_toRightOf="@id/imageViewMood"
        android:max="100"
        android:minWidth="110dip" />

    <ImageView
        android:id="@+id/imageViewMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/size_meter_spacing"
        android:layout_marginLeft="@dimen/size_margin_left"
        android:contentDescription="@null"
        android:src="@drawable/ic_mood_content" />

    <ImageView
        android:id="@+id/imageViewHearts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/imageViewMood"
        android:layout_marginBottom="@dimen/size_meter_spacing"
        android:layout_marginLeft="@dimen/size_margin_left"
        android:contentDescription="@null"
        android:src="@drawable/ic_hearts" />

    <ProgressBar
        android:id="@+id/progressBarHearts"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/progressBarMood"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/size_meter_bar_horiz_spacing"
        android:layout_marginRight="@dimen/size_meter_bar_horiz_spacing"
        android:layout_toRightOf="@id/imageViewHearts"
        android:max="100"
        android:minWidth="110dip" />

    <TextView
        android:id="@+id/textViewHeartsPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textViewMoodStatus"
        android:layout_marginBottom="@dimen/size_meter_spacing"
        android:layout_marginRight="@dimen/size_margin_right"
        android:layout_toRightOf="@id/progressBarHearts"
        android:gravity="right"
        android:minWidth="@dimen/size_meter_text_minwidth"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/size_meter_text"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageViewThirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_margin_bottom"
        android:layout_marginLeft="@dimen/size_margin_left_landscape"
        android:layout_marginRight="@dimen/size_margin_right"
        android:layout_toRightOf="@id/textViewMoodStatus"
        android:contentDescription="@null"
        android:src="@drawable/ic_thirst" />

    <ProgressBar
        android:id="@+id/progressBarThirst"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_margin_bottom"
        android:layout_marginLeft="@dimen/size_meter_bar_horiz_spacing"
        android:layout_marginRight="@dimen/size_meter_bar_horiz_spacing"
        android:layout_toRightOf="@id/imageViewThirst"
        android:max="100"
        android:minWidth="110dip" />

    <TextView
        android:id="@+id/textViewThirstPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_margin_bottom"
        android:layout_marginRight="@dimen/size_margin_right"
        android:layout_toRightOf="@id/progressBarThirst"
        android:gravity="right"
        android:minWidth="@dimen/size_meter_text_minwidth"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/size_meter_text"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageViewHunger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/imageViewThirst"
        android:layout_marginBottom="@dimen/size_meter_spacing"
        android:layout_marginLeft="@dimen/size_margin_left_landscape"
        android:layout_marginRight="@dimen/size_meter_spacing"
        android:layout_toRightOf="@id/textViewHeartsPercentage"
        android:contentDescription="@null"
        android:src="@drawable/ic_hunger" />

    <ProgressBar
        android:id="@+id/progressBarHunger"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/progressBarThirst"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/size_meter_bar_horiz_spacing"
        android:layout_marginRight="@dimen/size_meter_bar_horiz_spacing"
        android:layout_toRightOf="@id/imageViewHunger"
        android:max="100"
        android:minWidth="110dip" />

    <TextView
        android:id="@+id/textViewHungerPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textViewThirstPercentage"
        android:layout_marginBottom="@dimen/size_margin_bottom"
        android:layout_marginRight="@dimen/size_margin_right"
        android:layout_toRightOf="@id/progressBarHunger"
        android:gravity="right"
        android:minWidth="@dimen/size_meter_text_minwidth"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/size_meter_text"
        android:visibility="visible" />

</RelativeLayout>